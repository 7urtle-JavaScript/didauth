{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "target": "ES6",
        "lib": ["ES6"],
        "checkJs": true,
        "composite": true,
        "declaration": true,
        "strict": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    },
    "include": [
        "src/**/*.js",
        "src/types.d.ts"
    ]
}